                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Table Input Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
