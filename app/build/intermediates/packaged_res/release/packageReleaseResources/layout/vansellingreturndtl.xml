                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>
                        </LinearLayout>
