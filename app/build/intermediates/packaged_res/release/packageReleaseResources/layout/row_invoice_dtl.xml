<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dtlqtynew"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="40dp"
        android:gravity="center"
        android:background="@drawable/border_cell"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dtldecriptionnew"
        app:layout_constraintWidth_percent="0.1"/>

    <TextView
        android:id="@+id/dtldecriptionnew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:maxLines="5"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dtlqtynew"
        app:layout_constraintEnd_toStartOf="@id/dtlunitpricenew"
        app:layout_constraintWidth_percent="0.55"/>

    <TextView
        android:id="@+id/dtlunitpricenew"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="40dp"
        android:gravity="center"
        android:background="@drawable/border_cell"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dtldecriptionnew"
        app:layout_constraintEnd_toStartOf="@id/dtlamountnew"
        app:layout_constraintWidth_percent="0.175"/>

    <TextView
        android:id="@+id/dtlamountnew"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="40dp"
        android:gravity="center"
        android:background="@drawable/border_cell"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dtlunitpricenew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.175"/>
</androidx.constraintlayout.widget.ConstraintLayout>
