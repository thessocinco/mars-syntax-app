                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Invoice Details Header -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darker_shade">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="Invoice Details"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                            <!-- Table Header Row -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:backgroundTint="@color/dark_gray">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Qty"
                                        android:textColor="@color/white"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"
                                        android:layout_height="wrap_content"
                                        android:text="Description"
                                        android:textColor="@color/white"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="UnitPrice"
                                        android:textColor="@color/white"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="T-Amount"
                                        android:textColor="@color/white"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        tools:ignore="HardcodedText" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Table Input Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp">

                                <EditText
                                    android:id="@+id/etqtyviewinvdtlvl"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:autofillHints=""
                                    android:hint="qty"
                                    android:background="@drawable/edittext_light"
                                    android:inputType="textMultiLine"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/etdecriptionviewinvdtlvl"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:autofillHints=""
                                    android:hint="description"
                                    android:background="@drawable/edittext_light"
                                    android:inputType="textMultiLine"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/etunitpriceviewinvdtlvl"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:autofillHints=""
                                    android:hint="unit-price"
                                    android:background="@drawable/edittext_light"
                                    android:inputType="textMultiLine"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/ettotalamountitemviewinvdtlvl"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:autofillHints=""
                                    android:hint="t-amount"
                                    android:background="@drawable/edittext_light"
                                    android:inputType="textMultiLine"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_light"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <!-- Total Quantity Row -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:text="Total Qty"
                                            android:textSize="14sp"
                                            android:textColor="@color/black"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/tvtotalinvoiceqtyviewinvdtlvl"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textSize="14sp"
                                            android:textColor="@color/black"
                                            android:gravity="end"
                                            tools:ignore="HardcodedText" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/black"
                                        android:layout_marginVertical="6dp" />

                                    <!-- Total Amount Row -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:text="Total Amount"
                                            android:textSize="14sp"
                                            android:textColor="@color/black"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/tvtotalinvoiceamountdtlviewinvdtlvl"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:text="@string/_0_00"
                                            android:textSize="14sp"
                                            android:textColor="@color/black"
                                            android:gravity="end" />
                                    </LinearLayout>
                                </LinearLayout>
                        </LinearLayout>

                    <EditText
                        android:id="@+id/editRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/edittext_light"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:hint="Enter remarks here"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/btresendsavedtlvl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="5dp"
                        android:text="Resend Invoice"
                        android:textSize="14sp"
                        android:textColor="@drawable/button_text_selector"
                        android:background="@drawable/bg_button"
                        android:paddingVertical="12dp"
                        android:stateListAnimator="@null"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </TableLayout>
    </ScrollView>
</LinearLayout>