<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hover (focused) state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/slightly_gray"/>  <!-- Change color when hovered -->
        </shape>
    </item>

    <!-- Pressed (clicked) state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/slightly_gray"/>  <!-- Change color when clicked -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/gray"/>  <!-- Default color -->
        </shape>
    </item>
</selector>
