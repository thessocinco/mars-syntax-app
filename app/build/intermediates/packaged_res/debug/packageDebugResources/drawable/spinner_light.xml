<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Light Background -->
            <corners android:radius="8dp"/>  <!-- Rounded Corners -->
            <stroke android:width="1dp" android:color="#D1D1D1"/> <!-- Light Border -->
        </shape>
    </item>
    <!-- Dropdown Icon (No marginEnd here) -->
    <item android:drawable="@drawable/ic_dropdown" android:gravity="end|center_vertical"/>
</layer-list>
