<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbars="horizontal"
    android:name=".CustomerData.ConsumerNewOtherCustomer">

    <include layout="@layout/maintoolbar" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:stretchColumns="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Customer Name"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etCustomerNameNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="Customer Name"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Customer Type"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/SpinnerCustomerTypeNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/spinner_light"
                            android:entries="@array/ConsumerCustomerTypeArray"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Other Customer Type"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etCustomerOtherTypecon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="Other Customer Type"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/darker_shade">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="Customer Group Type"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <CheckBox
                            android:id="@+id/rbs1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Selling URC but not Getting Mars"
                            android:textSize="14sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <CheckBox
                            android:id="@+id/rbs2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Selling URC Products/NSOS (Getting from RDKA)"
                            android:textSize="14sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <CheckBox
                            android:id="@+id/rbs3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Selling Consumer but no URC Product"
                            android:textSize="14sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <CheckBox
                            android:id="@+id/rbs4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Direct Serve by Mars"
                            android:textSize="14sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Source"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etsourcecon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="Type Source"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Contact Person"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etContactPersonNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="Contact Person"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2.5dp"
                            android:text="Tell-Num"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_row="0"
                            app:layout_column="0"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/ettellnumconNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2.5dp"
                            android:layout_marginEnd="2.5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="tell num"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2.5dp"
                            android:text="Cell-Num"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_row="0"
                            app:layout_column="0"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etCellNumConNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2.5dp"
                            android:layout_marginEnd="2.5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="cell num"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/darker_shade">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="Customer Address"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Street"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_column="0"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etStreetNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="Street Address"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Barangay"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/SpinnerBarangayNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/spinner_light"
                            app:layout_columnWeight="1" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Municipality"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/SpinnerMunicipalityNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/spinner_light"
                            app:layout_columnWeight="1" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Province"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/SpinnerProvinceNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/spinner_light"
                            android:entries="@array/ProvinceArray"
                            app:layout_columnWeight="1" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Route Code"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/SproutecodeNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/spinner_light"
                            android:entries="@array/ConsumerRouteCode"
                            app:layout_columnWeight="1" />
                    </androidx.gridlayout.widget.GridLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:columnCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Receiver"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_column="0"
                            app:layout_row="0"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/etReceiverNumberNewOthercon"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:autofillHints=""
                            android:background="@drawable/edittext_light"
                            android:hint="+639090909090"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:padding="8dp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            tools:ignore="HardcodedText,TextFields" />
                    </androidx.gridlayout.widget.GridLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginVertical="5dp" />

                    <Button
                        android:id="@+id/btsendupdatesNewOthercon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button"
                        android:paddingVertical="12dp"
                        android:stateListAnimator="@null"
                        android:text="Send Map Location"
                        android:textColor="@drawable/button_text_selector"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/btsendupdates2NewOthercon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_button"
                        android:paddingVertical="12dp"
                        android:stateListAnimator="@null"
                        android:text="Send Customer Address"
                        android:textColor="@drawable/button_text_selector"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </TableLayout>
    </ScrollView>
</LinearLayout>
